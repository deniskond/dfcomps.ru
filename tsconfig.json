{
    "compileOnSave": false,
    "compilerOptions": {
        "importHelpers": true,
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "module": "es2015",
        "baseUrl": "./",
        "paths": {
            "@lib/*": ["lib/*"],
            "@models/*": ["models/*"],
            "@plugins/*": ["plugins/*"],
            "@routes/*": ["routes/*"],
            "@services/*": ["services/*"],
            "@api": ["api/index"],
            "@angular/material": ["node_modules/@angular/material"]
        }
    },
}
